  body.text-center
    main.form-signin
      form(method='POST')
        if alert
          .alert(role='alert' class="alert-"+alert.type)
            h4 #{alert.title}
            p  #{alert.desc}
        img.mb-4(src='img/logo.png' alt='' width='' height='80')
        h1.h3.mb-3.fw-normal REGISTER
        label.visually-hidden(for='inputEmail') Username
        input#inputEmail.form-control(type='text' placeholder='Username' required='' autofocus='' name="username")
        label.visually-hidden(for='inputPassword') Password
        input#inputPassword.form-control(type='password' placeholder='Password' required='' name="password")
        
        .form-group
          select.form-control(name='role')
            option admin
            option salesRep
            option supervisor
            option marketing
            option warehouse 
            
        label.visually-hidden Full Name
        input#inputPassword.form-control(type='text' placeholder='Full Name' required='' name="name")

        label.visually-hidden Job Position
        input#inputPassword.form-control.mb-3(type='text' placeholder='Job Position' required='' name="position")
       
       
        button.w-100.btn.btn-lg.btn-primary(type='submit') Sign Up
