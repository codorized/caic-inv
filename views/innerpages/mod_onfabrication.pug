    script. 
        - $(document).ready(function() {
            const tagID = !{JSON.stringify(tagID)};
            const onfabrication = !{JSON.stringify(onfabrication)};
            var baseurl = window.location.protocol + "//" + window.location.host + "/";
            $.ajax({   
                async: false,  
                method: 'GET',
                url: baseurl+'motor/oncheckup/'+tagID,                        
                success: function (motorobj) {       
                                    
                  if(motorobj)
                  {
                    if(motorobj.mechanical)
                    {
                      for(var i=0; i < motorobj.mechanical.length; i++)
                      {
                        if(motorobj.mechanical[i].name == 'acce-fancover')
                        {
                          $('#mechanical tbody').append('<div class="form-check"><tr><input class="form-check-input" type="checkbox" value="'+motorobj.mechanical[i].name+'" name="mech"><label class="form-check-label"><td>Fabrication of Fan Cover</td></label></tr></div>')
                        }
                        else if(motorobj.mechanical[i].name == 'acce-terminal')
                        {
                          $('#mechanical tbody').append('<div class="form-check"><tr><input class="form-check-input" type="checkbox" value="'+motorobj.mechanical[i].name+'" name="mech"><label class="form-check-label"><td>Fabrication of Terminal Cover</td></label></tr></div>')
                        }
                        else if(motorobj.mechanical[i].name == 'acce-wielding')
                        {
                          $('#mechanical tbody').append('<div class="form-check"><tr><input class="form-check-input" type="checkbox" value="'+motorobj.mechanical[i].name+'" name="mech"><label class="form-check-label"><td>Welding of Endplate</td></label></tr></div>')
                        }
                        else if(motorobj.mechanical[i].name == 'acce-terminalpost')
                        {
                          $('#mechanical tbody').append('<div class="form-check"><tr><input class="form-check-input" type="checkbox" value="'+motorobj.mechanical[i].name+'" name="mech"><label class="form-check-label"><td>Fabrication of Terminal Post</td></label></tr></div>')
                        }
                        else if(motorobj.mechanical[i].name == 'acce-cable')
                        {
                          $('#mechanical tbody').append('<div class="form-check"><tr><input class="form-check-input" type="checkbox" value="'+motorobj.mechanical[i].name+'" name="mech"><label class="form-check-label"><td>Fabrication of Adaptor Cable</td></label></tr></div>')
                        }
                        else if(motorobj.mechanical[i].name == 'acce-alignment')
                        {
                          $('#mechanical tbody').append('<div class="form-check"><tr><input class="form-check-input" type="checkbox" value="'+motorobj.mechanical[i].name+'" name="mech"><label class="form-check-label"><td>Fabrication of Shafting including Alignment</td></label></tr></div>')
                        }
                        else if(motorobj.mechanical[i].name == 'acce-finge-coupling')
                        {
                          $('#mechanical tbody').append('<div class="form-check"><tr><input class="form-check-input" type="checkbox" value="'+motorobj.mechanical[i].name+'" name="mech"><label class="form-check-label"><td>Replacement of Flange Coupling including Reboring</td></label></tr></div>')
                        }
                        else if(motorobj.mechanical[i].name == 'acce-shafting')
                        {
                          $('#mechanical tbody').append('<div class="form-check"><tr><input class="form-check-input" type="checkbox" value="'+motorobj.mechanical[i].name+'" name="mech"><label class="form-check-label"><td>Build up and Machining of Shafting</td></label></tr></div>')
                        }
                        else if(motorobj.mechanical[i].name == 'acce-welding-motor')
                        {
                          $('#mechanical tbody').append('<div class="form-check"><tr><input class="form-check-input" type="checkbox" value="'+motorobj.mechanical[i].name+'" name="mech"><label class="form-check-label"><td>Welding of Motor Base</td></label></tr></div>')
                        }
                        else if(motorobj.mechanical[i].name == 'acce-reboring-housing')
                        {
                          $('#mechanical tbody').append('<div class="form-check"><tr><input class="form-check-input" type="checkbox" value="'+motorobj.mechanical[i].name+'" name="mech"><label class="form-check-label"><td>Reboring of Bearing Housing</td></label></tr></div>')
                        }
                        else if(motorobj.mechanical[i].name == 'acce-sleeving')
                        {
                          $('#mechanical tbody').append('<div class="form-check"><tr><input class="form-check-input" type="checkbox" value="'+motorobj.mechanical[i].name+'" name="mech"><label class="form-check-label"><td>Sleeving of Bearing Housing</td></label></tr></div>')
                        }
                      }
                    }

                  }
                },
                error: function (xhr, text, error) {              
                    alert('Error: ' + error);
                }
            })

            var now = new Date(onfabrication.startdate);
            var day = ("0" + now.getDate()).slice(-2);
            var month = ("0" + (now.getMonth() + 1)).slice(-2);
            var startdate = now.getFullYear()+"-"+(month)+"-"+(day) ;

            var now2 = new Date(onfabrication.finishdate);
            var day2 = ("0" + now2.getDate()).slice(-2);
            var month2 = ("0" + (now2.getMonth() + 1)).slice(-2);
            var finishdate = now2.getFullYear()+"-"+(month2)+"-"+(day2) ;
    
            $('input[name="startdate"]').val(startdate);
            $('input[name="finishdate"]').val(finishdate);

            //Check all that 
            var mechKeys = Object.keys(onfabrication.mechanical);
        
            for(var i=0; i<mechKeys.length; i++)
            { 
                $('input[value="'+mechKeys[i]+'"]').prop('checked', onfabrication.mechanical[mechKeys[i]])
            }

            //DELETE
          -$('#delete').on('click', function(){
            var answer = window.confirm("Are you sure you want to delete this data? Note: It will delete all its succeeding stages but the preceeding will be retained");
            if (answer) {
                $.ajax({   
                    async: false,  
                    method: 'POST',
                    url: baseurl+'motor/delete/onfabrication/'+tagID,                        
                    success: function (data) {   
                        alert('Successfully deleted: '+ data.stage + ' and all succeeding stages (if there are any)')
                        var stages = ['notstarted','oncheckup','prelimdocs','onrewind', 'onfabrication', 'inbaking', 'assemblyandtesting', 'painting', 'fordelivery', 'forbillingstatement', 'foror', 'completed'];
                        if(data.stage != 'notstarted')
                          window.location.replace(baseurl+'motor/motorItem/'+(stages[stages.indexOf(data.stage)-1])+'/'+data.tagID);
                        else 
                          window.location.replace(baseurl);
                    },
                    error: function (xhr, text, error) {              
                        alert('Error: ' + error);
                    }
                })
            }
            else {
                //some code
            }
          })
           
        })


     
