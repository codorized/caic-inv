doctype html
html(lang='en')
  include components/header.pug
  body#bodyStyle
    include components/navbar.pug
    .container-fluid
      .row
        include components/sidebar.pug
        main.col-md-9.ml-sm-auto.col-lg-10.px-md-4(role='main')
        
          .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
            h1.h2 All Users
            .btn-toolbar.mb-2.mb-md-0
          
          .table-responsive
            table.table.table-striped.table-sm
              thead.thead-dark
                tr
                  th ID
                  th Full Name
                  th Username
                  th Role
                  th  
              tbody#newItem
                
                each item in items
                  tr.userRows
                    td.id #{item.id}
                    td #{item.name}
                    td #{item.username}
                    td #{item.ROLE}
                    td
                      button.btn.btn-danger.deleteItem
                        svg.bi.bi-x-circle(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewBox='0 0 16 16')
                          path(d='M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z')
                          path(d='M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z')

  include components/footer.pug
  script. 
    
    -$('.deleteItem').on('click', function(){
        var baseurl = window.location.protocol + "//" + window.location.host + "/"
        var isDelete = confirm("Are you sure you want to delete this item?");
        var grandparent = $(this).parent().parent().remove()    
        var id = grandparent.find('.id')
        
        if(isDelete)
        {
           $.ajax({   
                async: true, 
                method: 'POST',
                url: baseurl+'user/single/delete/'+id.html(),                        
                success: function (data) {    
                    grandparent.remove()
                },
                error: function (xhr, text, error) {              
                    alert('Error: ' + error);
                }
            })      
        }
    })

    

      
     
